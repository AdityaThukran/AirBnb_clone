<% layout("/layouts/boilerplate") %>
    
    <style>
    #filters {
        display: flex;
        gap: 1rem;
        align-items: center;
        margin-top: 1rem;
        text-align: center;
       margin-bottom: 1rem;
    }
    .filter {
        opacity: 0.7;
        margin-right: 1rem;
    }
    .filter:hover {
        cursor: pointer;
        opacity: 1;
    }
    .filter p {
        font-size: 0.8rem;
    }
    #tax-info {
        font-size: 0.7rem;
        color: gray;
        display: none;
    }
    .tax-toggle {
        margin-left: auto;
        border: 2px solid lightgray;
        border-radius: 1rem;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        background-color: #f7f7f7;
        margin-bottom: auto;

    }

    /* This class will be applied by the EJS code */
.filter-link.active .filter {
  opacity: 1 !important;
  border-bottom: 2px solid #333; /* Or any style you prefer */
  
}

a[href="/listings"].active .filter {
  border-bottom: none;
}

/* Make the links not have default blue/purple underline */
.filter-link {
  text-decoration: none;
  color: inherit; /* Inherits the color from the parent */
}

    </style>

