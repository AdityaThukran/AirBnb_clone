        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
  <input class="form-check-input" 
    type="checkbox" 
    role="switch" 
    id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
</div>
        </div>
    </div>

  <div class="row row-cols-sm-1 row-cols-md-3 row-cols-lg-3 g-4 mt-1rem">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
        <div class="col">
        <div class="card col listing-card">
            <img 
            src="<%= listing.image.url %>" 
            class="card-img-top" 
            alt="Listing Image" 
            style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b>
                    <br>
                    &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
                    <i id="tax-info"> &nbsp; &nbsp; +18% GST</i>
                </p>
            </div>
        </div>
    </div></a>
    
<% } %>
    </div>

    <script>
    const taxToggle = document.querySelector('.tax-toggle input');
    taxToggle.addEventListener('click', function() {
        let taxInfoElements = document.querySelectorAll('#tax-info');
        taxInfoElements.forEach(el => {
            if (taxToggle.checked) {
                el.style.display = 'inline';
            } else {
                el.style.display = 'none';
            }
        });
    });
    </script>
  
